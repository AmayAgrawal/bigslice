<div class="row mt-2 mb-4">
	<div class="col">
		<h3>Similar BGCs</h3>
		{% if status_id >= 7 %}
			<div class="row mt-4">
				<div class="col">
					<table id="table_homologs" class="table table-striped table-bordered table-hover nowrap">
						<thead class="thead-light">
							<tr>
								<th>BGC</th>
								<th>GCF</th>
								<th>#shared features</th>
								<th>distance</th>
								<th>taxon</th>
								<th>class</th>
								<th>dataset</th>
								<th>alignment</th>
							</tr>
						</thead>
						<tbody class="tbody">
						</tbody>
					</table>
				</div>
			</div>
			<!-- scripts -->
			<script type="text/javascript">
				$(document).ready(function(){
					$("#table_homologs").DataTable({
						searching: false,
						ordering:  false
					});
				});
			</script>
		{% else %}
			<div class="col mt-4 text-center text-secondary">
				The run is not yet finished. No homology data to show for this BGC.
			</div>
		{% endif %}
	</div>
</div>